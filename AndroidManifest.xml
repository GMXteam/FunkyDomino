		  android:versionCode="8"
		  android:versionName="0.0.8">
	<uses-sdk android:minSdkVersion="4" android:targetSdkVersion="15">
	</uses-sdk>
	<uses-feature android:glEsVersion="0x00020000" android:required="true" />    
