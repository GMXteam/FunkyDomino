				 android:label="@string/app_name" 
				 android:hardwareAccelerated="true" 
				 android:theme="@style/MainTheme">

		<activity android:name="MainActivity" android:label="@string/main_activity_name" >   
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>  

		<activity android:name="GameActivity" android:label="@string/funky_domino_activity_name" />       
		<activity android:name="HighscoresActivity" android:label="@string/highscores_activity_name" />  
		<activity android:name="PreferencesActivity" android:label="@string/preferences_activity_name" />  


		<activity android:name="LoadGameActivity" android:label="@string/load_game_activity_name" />     
	</application>    
</manifest> 
